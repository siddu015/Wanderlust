<% layout("layouts/boilerplate") %>
<body>
<!-- Search Bar -->
    <div class="search">
        <div class="searchbar">
            <div class="search-container">
                <input class="input" type="text" id="search-input" placeholder="Search by title, category, or location" />
                <svg id="search-button" viewBox="0 0 24 24" class="search__icon">
                    <g>
                        <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                    </g>
                </svg>
            </div>
        </div>
    </div>

<!-- Filters container -->
    <div id="filters-container">
        <div id="filters">
            <div class="filter">
                <a href="/listings">
                    <div><i class="fa-solid fa-th-large"></i></div>
                    <p>All</p>
                </a>
            </div>

            <div class="filter" data-category="Trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter" data-category="Rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter" data-category="Iconic Cities">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter" data-category="Mountains">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter" data-category="Castles">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter" data-category="Amazing Pools">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter" data-category="Free Wi-Fi">
                <div><i class="fa-solid fa-wifi"></i></div>
                <p>Free Wi-Fi</p>
            </div>
            <div class="filter" data-category="Restaurants">
                <div><i class="fa-solid fa-utensils"></i></div>
                <p>Restaurants</p>
            </div>
            <div class="filter" data-category="Romantic Getaways">
                <div><i class="fa-solid fa-heart"></i></div>
                <p>Romantic Getaways</p>
            </div>
            <div class="filter" data-category="Pet-Friendly">
                <div><i class="fa-solid fa-paw"></i></div>
                <p>Pet-Friendly</p>
            </div>
        </div>

        <div id="toggle-container">
            <span class="toggle-label">Price after taxes</span>

            <div class="checkbox-wrapper-51">
                <input id="toggle-price" type="checkbox">
                <label class="toggle" for="toggle-price">
                    <span >
                      <svg id="toggle-price" viewBox="0 0 10 10" height="10px" width="10px">
                        <path d="M5,1 L5,1 C2.790861,1 1,2.790861 1,5 L1,5 C1,7.209139 2.790861,9 5,9 L5,9 C7.209139,9 9,7.209139 9,5 L9,5 C9,2.790861 7.209139,1 5,1 L5,9 L5,1 Z"></path>
                      </svg>
                    </span>
                </label>
            </div>
        </div>
    </div>

<!-- Listings Section -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= listing.images[0].url %>" class="card-img-top" alt="listing_image" style="height: 20rem;"/>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br />
                            <span class="listing-price" data-original-price="<%= listing.price %>">
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                        </span>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>

