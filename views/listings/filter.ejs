<link rel="stylesheet" href="/css/style.css">

<div class="container">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4"> <!-- Added g-4 for spacing -->
        <% if (allListings.length > 0) { %>
            <% for (let listing of allListings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card h-100"> <!-- Added h-100 for uniform card height -->
                            <img src="<%= listing.images[0].url %>" class="card-img-top" alt="listing_image" style="object-fit: cover; height: 20rem;" /> <!-- Added object-fit -->
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b><br />
                                    <span class="listing-price" data-original-price="<%= listing.price %>">
                                        &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                                    </span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        <% } else { %>
            <div class="no-results">
                <p>No listings found for the selected filters.</p>
            </div>
        <% } %>
    </div>
</div>
