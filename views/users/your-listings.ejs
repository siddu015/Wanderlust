<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <h2 class="text-center mb-4">Your Wanderlust Homes</h2>

    <% if (listings.length > 0) { %>
        <div class="row g-4">
            <% listings.forEach(listing => { %>
                <div class="col-12 col-md-6">
                    <div class="card listing-card">
                        <div class="card-background" style="background-image: url('<%= listing.images[0].url %>');">
                            <div class="card-content">
                                <div class="card-header">
                                    <h5 class="listing-title"><%= listing.title %></h5>
                                    <p class="listing-location"><%= listing.location %></p>
                                </div>
                                <div class="card-footer">
                                    <p class="listing-price">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
                                    <a href="/listings/<%= listing._id %>">
                                        <button class="cta">
                                            <span class="hover-underline-animation"> Explore now </span>
                                            <svg width="15px" height="10px" viewBox="0 0 13 10">
                                                <path d="M1,5 L11,5"></path>
                                                <polyline points="8 1 12 5 8 9"></polyline>
                                            </svg>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center">You don't have any listings yet. Start by creating a new listing!</p>
    <% } %>
</div>

<style>
    /* Base Styling */
    .container {
        max-width: 1140px;
        margin: auto;
        padding: 0 15px;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #234567;
    }

    /* Card Styling */
    .listing-card {
        position: relative;
        height: 400px;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .listing-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2);
    }

    .card-background {
        position: relative;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        color: white;
    }

    .card-content {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
    }

    .card-header {
        text-align: left;
        padding: 10px;
        background: rgba(0, 0, 0, 0.25); /* Subtle overlay */
        border-radius: 8px;
    }

    .listing-title {
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
    }

    .listing-location {
        font-size: 1rem;
        font-weight: 600;
        margin: 5px 0 0;
        opacity: 0.9;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .listing-price {
        font-size: 1.4rem;
        font-weight: bold;
        margin: 0;
        padding: 5px 10px;
        border-radius: 8px;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        h2 {
            font-size: 2.2rem;
        }

        .listing-title {
            font-size: 1.8rem;
        }

        .listing-price {
            font-size: 1.3rem;
        }
    }

    @media (max-width: 992px) {
        h2 {
            font-size: 2rem;
        }

        .listing-card {
            height: 350px;
        }

        .listing-title {
            font-size: 1.6rem;
        }

        .listing-price {
            font-size: 1.2rem;
        }
    }

    @media (max-width: 768px) {
        h2 {
            font-size: 1.8rem;
        }

        .listing-card {
            height: 300px;
        }

        .card-content {
            padding: 15px;
        }

        .listing-title {
            font-size: 1.5rem;
        }

        .listing-price {
            font-size: 1.1rem;
        }
    }

    @media (max-width: 576px) {
        h2 {
            font-size: 1.6rem;
        }

        .listing-card {
            height: 250px;
        }

        .listing-title {
            font-size: 1.3rem;
        }

        .listing-price {
            font-size: 1rem;
        }
    }
</style>
