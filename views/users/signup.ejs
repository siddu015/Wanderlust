<% layout("layouts/boilerplate") %>
<div class="custom-row">
    <div class="custom-col">
        <br>
        <h2 class="form-title">Create an Account</h2>
        <br>
        <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Choose a username" type="text" class="form-control" required />
                <div class="valid-feedback">Username looks good!</div>
                <div class="invalid-feedback">Please enter a username!</div>
            </div>
            <div class="mb-3">
                <label for="firstname" class="form-label">FirstName</label>
                <input name="firstname" id="firstname" placeholder="First name" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a first name!</div>
            </div>
            <div class="mb-3">
                <label for="lastname" class="form-label">LastName</label>
                <input name="lastname" id="lastname" placeholder="Last name" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a last name!</div>
            </div>
            <div class="mb-3">
                <label for="phoneNo" class="form-label">Phone No</label>
                <input name="phoneNo" id="phoneNo" placeholder="+918234567890" type="tel" class="form-control" pattern="[0-9]{10}" required />
                <div class="invalid-feedback">Please enter a valid phone number!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" placeholder="example@example.com" type="email" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid email address!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="Create a password" type="password" class="form-control" required />
                <div class="invalid-feedback">Please enter a password!</div>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input name="confirmPassword" id="confirmPassword" placeholder="Confirm password" type="password" class="form-control" required />
                <div class="invalid-feedback">Please confirm your password!</div>
            </div>
            <br>
            <button class="btn btn-outline-primary mr-3 px-4">Sign Up</button>
        </form>
        <p class="switch-account mt-3">Already have an account? <a href="/login">Login</a> here.</p>
    </div>
</div>

<style>
    /* Login Page & signUp Page */
    .custom-row {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 2rem 2rem 2rem 2rem;
        padding: 2rem 2rem 0 2rem;
    }

    .custom-col {
        background-color: #f9f9f9; /* Background color for the form */
        padding: 2rem;
        border-radius: 8px; /* Rounded corners for the form */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        width: 70%; /* Increased width */
    }


    /* Title styling */
    .form-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    /* Form control styling for inputs */
    .form-control {
        border-radius: 5px;
        box-shadow: none;
        margin-bottom: 1rem; /* Space between form elements */
    }

    /* Error message styling */
    .invalid-feedback {
        font-size: 0.875rem;
        color: red;
    }

    /* Link styling for account switch */
    .switch-account {
        text-align: center;
        font-size: 0.9rem;
        margin-top: 15px;
    }

    .switch-account a {
        color: #007bff;
        text-decoration: none;
    }

    .switch-account a:hover {
        text-decoration: underline;
    }

</style>

