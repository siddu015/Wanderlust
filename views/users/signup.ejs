<% layout("layouts/boilerplate") %>
<div class="custom-row">
    <div class="signup-container">
        <div class="heading">Sign Up</div>
        <form method="POST" action="/signup" novalidate class="form needs-validation">
            <input name="username" placeholder="Choose a username" type="text" class="input" required>
            <input name="firstname" placeholder="First name" type="text" class="input" required>
            <input name="lastname" placeholder="Last name" type="text" class="input" required>
            <input name="phoneNo" placeholder="+918234567890" type="tel" class="input" pattern="[0-9]{10}" required>
            <input name="email" placeholder="example@example.com" type="email" class="input" required>
            <input name="password" placeholder="Create a password" type="password" class="input" required>
            <input name="confirmPassword" placeholder="Confirm password" type="password" class="input" required>
            <input class="signup-button" type="submit" value="Sign Up">
        </form>
        <p class="switch-account">Already have an account? <a href="/login">Login</a> here.</p>
    </div>
</div>

<style>
    body {
        background: rgba(0, 0, 0, 0.1);
    }
    .custom-row {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .signup-container {
        font-family: "Times New Roman", sans-serif;
        max-width: 500px;
        width: 100%;
        background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
        border-radius: 15px;
        padding: 40px 30px;
        border: 2px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.9) 10px 20px 20px -10px;
    }

    .heading {
        text-align: center;
        font-weight: 900;
        font-size: 28px;
        color: rgb(16, 137, 211);
        margin-bottom: 20px;
    }

    .form .input {
        width: 100%;
        background: white;
        border: none;
        padding: 12px 20px;
        border-radius: 20px;
        margin-top: 15px;
        box-shadow: #cff0ff 0px 8px 8px -4px;
        border: 1px solid #ddd;
        font-size: 16px;
    }

    .form .input:focus {
        outline: none;
        border: 1px solid #12B1D1;
        box-shadow: 0 0 5px rgba(18, 177, 209, 0.5);
    }

    .signup-button {
        display: block;
        width: 100%;
        padding: 12px;
        margin-top: 20px;
        font-weight: bold;
        background: linear-gradient(45deg, rgb(16, 137, 211) 0%, rgb(18, 177, 209) 100%);
        color: white;
        border-radius: 20px;
        border: none;
        transition: transform 0.2s;
    }

    .signup-button:hover {
        transform: scale(1.03);
    }

    .switch-account {
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
    }

    .switch-account a {
        color: #0099ff;
        text-decoration: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .signup-container {
            padding: 25px;
            margin: 1.5rem;
        }

        .heading {
            font-size: 24px;
        }

        .form .input {
            font-size: 14px;
        }

        .signup-button {
            font-size: 14px;
            padding: 10px;
        }

        .switch-account {
            font-size: 12px;
        }
    }

    @media (max-width: 480px) {
        .signup-container {
            padding: 20px;
            margin: 1rem;
        }

        .heading {
            font-size: 20px;
        }

        .form .input {
            font-size: 12px;
            padding: 10px;
        }

        .signup-button {
            font-size: 12px;
            padding: 8px;
        }

        .switch-account {
            font-size: 10px;
        }
    }
</style>
