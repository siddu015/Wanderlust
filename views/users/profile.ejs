<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <!-- Profile Picture -->
            <div class="profile-pic-container">
                <img
                        src="<%= currUser.profilePic || 'https://img.freepik.com/premium-photo/young-smiling-man-cartoon-showing-ok-sign_894067-15510.jpg' %>"
                        alt="<%= currUser.username %>'s Profile Picture"
                        class="profile-pic">
            </div>
            <h4 class="mt-3"><%= currUser.username %></h4>

            <hr>
                <p class="text-muted">Email: <%= currUser.email %></p>
                <a href="/your-listings" class="btn btn-outline-primary mt-3 px-4 py-2">See Your Listings</a>
            <hr class="w-50 mx-auto my-3">

            <!-- Logout Button -->
            <a href="/logout" class="btn btn-danger mt-3">Logout</a>
        </div>
    </div>
</div>
